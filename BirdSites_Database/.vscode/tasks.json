{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run pytest and Save Output",
            "type": "shell",
            "command": "coverage",
            "args": [
                "run",
                "--source=src",
                "-m",
                "pytest",
                "--capture=tee-sys",
                "--log-file=./test_report.txt"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$eslint-stylish"
            ]
        },
        {
            "label": "Generate Coverage Report",
            "type": "shell",
            "command": "coverage",
            "args": [
                "html"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}